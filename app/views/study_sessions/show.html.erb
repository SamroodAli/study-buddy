<div class="h-100 card container p-3">
  <div class="user-name container card">
    <h1 class="text-dark text-center"><%= @study_session.name %></h1>
    <%= link_to @study_session.collection do%>
      <p><%= image(@study_session) %></p>
    <% end %>
  </div>
  <div class="card my-3 p-3">
    <p>Created : <%= @study_session.created_at %></p>
    <p>Collection   : <%= @study_session.collection.name %></p>
  </div>
  <div class="card justify-content-between p-3">
    <p>Duration : </p>
    <p><%= distance_of_time_in_words(@study_session.duration)%></p>
  </div>
  <%= form_with model: @study_session, local: true do |form|%>
    <%= form.text_area :note,placeholder:"Any notes for the session",class:"form-control" %>
    <%= form.submit session_note_button_text(@study_session), class:"btn btn-success"%>
  <% end %>
</div>
