<%= form_with url: login_path, scope: :session,local: true do |form|%>
  <h1 class="text-center m-3">Log in</h1>
  <div class="container">
    <%= form.label :email , class:"invisible"%>
    <%= form.email_field :email ,class:"form-control",placeholder:"Enter email", required: true%>
    <%= form.label :password ,class:"invisible"%>
    <%= form.password_field :password ,class:"form-control",required: true,placeholder:"Enter password"%>
    <div class="my-3 card">
      <%= form.label :remember_me, class: "checkbox inline" do %>
        <%= form.check_box :remember_me,class:"m-3" %>
        <span>Remember me on this computer</span>
      <% end %>
      <p class="m-3">New User ?<%= link_to 'Sign up', signup_path ,class:"btn btn-success mx-3"%></p>
    </div>
  </div>
  <div class="heightfix"></div>
  <div class="bg-green">
    <%= form.submit "Log in", class:"btn btn-bottom" %>
  </div>
<% end %>
</div>
