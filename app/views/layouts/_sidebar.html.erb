      <%= link_to login_path ,class:"list-group-item" do%>
        <i class="far fa-user-circle"></i>
        <span>Login</span>
      <% end %>
      <%= link_to signup_path ,class:"list-group-item" do%>
        <i class="fas fa-user-circle"></i>
        <span>Register</span>
      <% end %>
